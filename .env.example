# Keycloak Configuration
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=your-admin-password-here

# Database Configuration
KC_DB=postgres
KC_DB_URL=jdbc:postgresql://postgres:5432/keycloak
KC_DB_USERNAME=keycloak
KC_DB_PASSWORD=your-db-password-here

# HTTP Configuration  
KC_HOSTNAME=auth.kishax.net
KC_HTTP_ENABLED=true
KC_HTTP_PORT=8080
KC_HTTPS_PORT=8443

# Proxy Configuration (for ALB)
KC_PROXY=edge
KC_HOSTNAME_STRICT=false
KC_HOSTNAME_STRICT_HTTPS=false

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# IAM Identity Center SAML settings
IAM_IDENTITY_CENTER_ACS_URL=your-iam-identity-center-acs-url
IAM_IDENTITY_CENTER_ISSUER_URL=your-iam-identity-center-issuer-url

# AWS Applications Configuration
AWS_START_URL=https://d-xxxxxxxxxx.awsapps.com/start
AWS_WORKMAIL_URL=https://xxxxxx.awsapps.com/mail

# Logging
KC_LOG_LEVEL=INFO

# Email/SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_SSL=false
SMTP_STARTTLS=true
SMTP_FROM=noreply@kishax.net
SMTP_FROM_DISPLAY_NAME=Kishax Authentication
